<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
	    android:id="@+id/TitleBar"
	    android:text="活动易"
	    android:textSize="20sp"
	    android:textColor="@color/encode_view"
	    android:background="#007ec9"
	    android:gravity="center_vertical|center"
	    android:layout_width="match_parent"
	    android:layout_height="44dp" >
	</TextView>
			
    <ScrollView
        android:id="@+id/scrollView1"
        android:scrollbars="none"
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            
		    <TextView
		        android:id="@+id/textView1"
		        android:layout_width="250dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:text="联网登陆"
		        android:textSize="22sp"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="@color/sbc_header_text" />
		
		    <EditText
				android:id="@+id/authkey"
				android:layout_marginTop="15dp"
				android:layout_width="250dp"
				android:layout_height="35dp"
		        android:hint="检票账号"
		        android:textColor="#324f85"
		        android:textSize="16sp"
		        android:paddingLeft="5dp"
		        android:background="@drawable/border"
		        android:ems="10" >
		    </EditText>
			
  		    <TableRow
		        android:id="@+id/tableRow1"
		        
		        android:layout_width="250dp"
		        android:layout_height="wrap_content" >
			    <Button
			        android:id="@+id/how"
			        android:layout_width="110dp"
			        android:layout_height="20dp"
			        android:layout_marginTop="12dp"
			        android:background="@drawable/grey"
			        android:text="如何获得检票账号？"
			        android:textColor="@color/encode_view"
			        android:textSize="10dp" />
			</TableRow>
				
		    <EditText
		        android:id="@+id/secret"
		        android:layout_marginTop="12dp"
		        android:layout_width="250dp"
		        android:layout_height="35dp"
		 		android:hint="检票密码"
		 		android:textColor="#324f85"
		        android:textSize="16sp"
		        android:paddingLeft="5dp"
		        android:background="@drawable/border"
		        android:ems="10" >
		    </EditText>
		
		    <Button
		        android:id="@+id/login"
		        android:layout_marginTop="20dp"
		        android:layout_width="100dp"
		        android:layout_height="32dp"
		        android:textSize="16sp"
		        android:background="@drawable/thick"
		        android:textColor="@color/encode_view" 
		        android:text="登录" >

			    <requestFocus android:layout_width="wrap_content" />

			    </Button>
		
		    <TableRow
		        android:id="@+id/tableRow1"
		        android:background="@drawable/blank"
		        android:layout_marginTop="30dp"
		        android:layout_marginBottom="10dp"
		        android:layout_width="250dp"
		        android:layout_height="35dp" >
		
		        <TextView
		            android:id="@+id/textView2"
		            android:layout_width="170dp"
		            android:layout_height="35dp"
		            android:layout_marginLeft="10dp"
		            android:gravity="center_vertical"
		            android:text="联机检票（需联网）"
		            android:textAppearance="?android:attr/textAppearanceMedium"
		            android:textColor="#007ec9"
		            android:textSize="16dp" />
		
		        <!-- <Button
		            android:id="@+id/ghostButton"
		            
		            android:background="@drawable/on"
		            android:layout_width="60dp"
		            android:layout_height="23dp"
					/> -->
		        
		        <CheckBox  
		          android:id="@+id/ghost"  
				  android:layout_width="60dp"  
				  android:layout_height="22dp"
				  android:checked="true"  
				  style="@style/MyCheckBox"  
				  />  
		
		    </TableRow>
		
		    <TextView
		        android:id="@+id/textView3"
		        android:layout_width="250dp"
		        android:layout_height="20dp"
		        android:layout_marginTop="10dp"
		        android:textSize="12dp"
		        android:gravity="center_vertical"
		        android:text="联机模式支持多手机共同验票，并实时更新"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="@color/sbc_header_text" />
		    
		   <TextView
			    android:id="@+id/textView4"
			    android:layout_width="250dp"
			    android:layout_height="60dp"
			    android:textSize="12dp"
			    android:gravity="center_vertical"
			    android:text="脱机模式无需联网即可验票，但无法与其他验票终端配合，验票结果可在网络恢复后重新登录，数据自动上传至服务器"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textColor="@color/sbc_header_text" />
		
		   <TextView
				android:id="@+id/textView5"
				android:layout_width="250dp"
				android:layout_height="0.5dp"   
				android:layout_marginTop="10dp"
				android:background="@color/sbc_header_text"
				android:textAppearance="?android:attr/textAppearanceSmall" />
		
		   <TextView
		       android:id="@+id/TextView06"
		       android:layout_width="250dp"
		       android:layout_height="wrap_content"
		       android:layout_marginTop="15dp"
		       android:text="活动易"
		       android:textSize="20dp"
		       android:textAppearance="?android:attr/textAppearanceMedium"
		       android:textColor="@color/sbc_header_text" />
		
		   <TextView
		       android:id="@+id/TextView07"
		       android:layout_width="250dp"
		       android:layout_height="20dp"
		       android:layout_marginTop="10dp"
		       android:gravity="center_vertical"
		       android:text="让活动营销, 销售, 验票, 统计更便捷！"
		       android:textAppearance="?android:attr/textAppearanceMedium"
		       android:textColor="@color/sbc_header_text"
		       android:textSize="12dp" />
		
		   <TextView
		       android:id="@+id/TextView08"
		       android:layout_width="250dp"
		       android:layout_height="20dp"
		       android:gravity="center_vertical"
		       android:text="Tel  8580 0390"
		       android:textAppearance="?android:attr/textAppearanceMedium"
		       android:textColor="@color/sbc_header_text"
		       android:textSize="12dp" />
		   
		   <TextView
		       android:id="@+id/TextView09"
		       android:layout_width="250dp"
		       android:layout_height="20dp"
		       android:layout_marginBottom="20dp"
		       android:gravity="center_vertical"
		       android:text="http e.mosh.cn"
		       android:textAppearance="?android:attr/textAppearanceMedium"
		       android:textColor="@color/sbc_header_text"
		       android:textSize="12dp" />
		            
        </LinearLayout>
    </ScrollView>
   
</LinearLayout>