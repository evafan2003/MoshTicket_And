<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://www.norkoo.com">
    <item android:state_pressed="true" >
    <shape>
    <gradient
    android:startColor="#666666"
    android:centerColor="#333333"
    android:endColor="#666666"
    android:angle="270" />
    <stroke
    android:width="2dp"
    android:color="#dcdcdc" />
    <corners
    android:radius="2dp" />
    <padding
    android:left="10dp"
    android:top="10dp"
    android:right="10dp"
    android:bottom="10dp" />
    </shape>
    </item>
